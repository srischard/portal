{
  "vodChapterSubstituteMs":  600000,
  "disableGridMarkIndicator" : false,
  "timeout_fast_response": "3000",   // e.g. get moretv mapping table
  "dcam_heartbeat_interval": "4", // [s]
  "bookmark_interval": "30", // [s]
  "startplay_timeout": 10000, // [ms]
  "monitoring": false, // never set this in config to true; just to have the opportunity to tune it on by query-param
  "soonTresholdDays": 60, // days to switch from a date to "Demmächst" label
  "remainTresholdDays": 7, // "<" days to show a remain indicator (to purchase, rent-right are running out, etc.)
  "shortlinkRegex": ".*/\\d*/(\\w*)", // parse expression for getting shortlink from a deeplink - opposite of manifest.setting.deeplink which convert shortlink to deeplinks
  
  "bootstrapUrl": "https://i1wcps.t-online.de/bootstrap_m1/iptv2015/v1/manifest",
  "enableXSTBSerialNumber": true // send serialId on every request as a Http-Header `X-STBSerialNumber`
}